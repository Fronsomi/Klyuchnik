<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataView">

    <!--Введите ФИО-->
    <EditText
        android:id="@+id/idEdtFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="ФИО"
        android:minHeight="48dp" />

    <!--Введите номер карты-->
    <EditText
        android:id="@+id/idEdtCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Номер карты"
        android:minHeight="48dp" />

    <!--Введите время-->
    <EditText
        android:id="@+id/idEdtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Время"
        android:minHeight="48dp" />

    <!--редактировать текст описания курса-->
    <EditText
        android:id="@+id/idEdtAudienceNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Номер аудитории"
        android:minHeight="48dp" />

    <!--кнопка добавления данных-->
    <Button
        android:id="@+id/idBtnAddPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Добавить данные"
        android:textAllCaps="false" />

    <!--кнопка для просмотра данных-->
    <Button
        android:id="@+id/idBtnReadPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Посмотреть все данные"
        android:textAllCaps="false" />

</LinearLayout>